[project]
name = "{{BOT_NAME}}"
version = "1.0.0"
description = "{{BOT_DESCRIPTION}}"
readme = "README.md"
requires-python = ">=3.11"
dependencies = [
    "signalinator-core",
]

[project.scripts]
{{BOT_NAME}} = "{{BOT_NAME}}.cli:cli"

[build-system]
requires = ["hatchling"]
build-backend = "hatchling.build"

[tool.hatch.build.targets.wheel]
packages = ["src/{{BOT_NAME}}"]
