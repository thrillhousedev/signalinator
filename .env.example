# Signalinator Monorepo - Development Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# SIGNAL PHONE NUMBERS (one per bot - use separate numbers for each)
# =============================================================================
CONDUCTINATOR_PHONE=+1XXXXXXXXXX
DECISIONATOR_PHONE=+1XXXXXXXXXX
INFORMATIONATOR_PHONE=+1XXXXXXXXXX
INFORMINATOR_PHONE=+1XXXXXXXXXX
NEWSINATOR_PHONE=+1XXXXXXXXXX
SUMMARIZINATOR_PHONE=+1XXXXXXXXXX
TAGINATOR_PHONE=+1XXXXXXXXXX

# =============================================================================
# SIGNAL-CLI DAEMON PORTS (each bot gets its own daemon)
# =============================================================================
CONDUCTINATOR_DAEMON_PORT=8081
DECISIONATOR_DAEMON_PORT=8082
INFORMATIONATOR_DAEMON_PORT=8083
INFORMINATOR_DAEMON_PORT=8084
NEWSINATOR_DAEMON_PORT=8085
SUMMARIZINATOR_DAEMON_PORT=8086
TAGINATOR_DAEMON_PORT=8087

# =============================================================================
# DATABASE ENCRYPTION (shared key for all bots, min 16 chars)
# =============================================================================
ENCRYPTION_KEY=change-this-to-a-secure-key-min-16-chars

# =============================================================================
# OLLAMA CONFIGURATION (for AI bots: summarizinator, informationator)
# =============================================================================
OLLAMA_HOST=http://host.docker.internal:11434
OLLAMA_MODEL=dolphin-mistral:7b
OLLAMA_EMBED_MODEL=nomic-embed-text

# =============================================================================
# LOOMIO CONFIGURATION (for decisionator)
# Loomio auto-creates an admin user on first boot with these settings.
# Credentials are printed to docker logs. API key is shared with Decisionator.
# =============================================================================
LOOMIO_URL=http://localhost:3000
LOOMIO_API_KEY=                              # Leave blank for auto-generated, or set your own
LOOMIO_ADMIN_EMAIL=admin@decisionator.local  # Admin login email
LOOMIO_ADMIN_NAME=Admin                      # Admin display name
LOOMIO_ADMIN_PASSWORD=                       # Leave blank for auto-generated (printed to logs)

# =============================================================================
# GENERAL SETTINGS
# =============================================================================
LOG_LEVEL=INFO
LOG_SENSITIVE=false
TIMEZONE=UTC
AUTO_ACCEPT_GROUP_INVITES=true

# =============================================================================
# PROFILE MANAGEMENT (comma-separated UUIDs allowed to change bot profiles)
# =============================================================================
BOT_PROFILE_ADMINS=uuid1-here,uuid2-here

# =============================================================================
# CONDUCTINATOR (comma-separated UUIDs allowed to manage bots via conductinator)
# =============================================================================
CONDUCTINATOR_ADMINS=uuid1-here,uuid2-here

# =============================================================================
# ATTACHMENT CLEANUP
# =============================================================================
ATTACHMENT_TEMP_DIR=/tmp/signalinator
ATTACHMENT_RETENTION_MINUTES=5
ATTACHMENT_CLEANUP_INTERVAL=60

# =============================================================================
# API SETTINGS (optional, for bots with web APIs)
# =============================================================================
API_SECRET=change-this-to-a-secure-api-secret-32-chars
API_PORT=8000
